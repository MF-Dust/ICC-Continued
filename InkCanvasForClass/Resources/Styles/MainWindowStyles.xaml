<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Board Button Base Style -->
    <Style x:Key="BoardButtonStyle" TargetType="Border">
        <Setter Property="Width" Value="60" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Background" Value="#F8FAFC" />
        <Setter Property="Opacity" Value="0.95" />
        <Setter Property="BorderBrush" Value="#D1D5DB" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!-- Selection Toolbar Button Style -->
    <Style x:Key="SelectionToolbarButtonStyle" TargetType="Border">
        <Setter Property="Padding" Value="7,0" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- Selection Toolbar Container Style -->
    <Style x:Key="SelectionToolbarContainerStyle" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Height" Value="48" />
        <Setter Property="Background" Value="#F8FAFC" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#D1D5DB" />
    </Style>

</ResourceDictionary>
