<ui:FluentWindow x:Class="Ink_Canvas.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Ink_Canvas.Views.Settings"
        xmlns:pages="clr-namespace:Ink_Canvas.Views.Settings.Pages"
        mc:Ignorable="d"
        Title="应用设置" Height="760" Width="1120"
        MinHeight="640" MinWidth="960"
        WindowStartupLocation="CenterScreen"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>

            <!-- 导航视图专用颜色 -->
            <Color x:Key="NavigationBackgroundColor">Transparent</Color>
            <Color x:Key="NavigationItemHoverColor">#E9E9E9</Color>
            <Color x:Key="NavigationItemSelectedColor">#E5E5E5</Color>
            <Color x:Key="SelectedIndicatorColor">#0067C0</Color>

            <!-- 导航视图专用画刷 -->
            <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="{StaticResource NavigationBackgroundColor}"/>
            <SolidColorBrush x:Key="NavigationItemHoverBrush" Color="{StaticResource NavigationItemHoverColor}"/>
            <SolidColorBrush x:Key="NavigationItemSelectedBrush" Color="{StaticResource NavigationItemSelectedColor}"/>
            <SolidColorBrush x:Key="SelectedIndicatorBrush" Color="{StaticResource SelectedIndicatorColor}"/>
            
            <!-- 兼容性画刷 -->

            <!-- 默认 TextBlock 样式 - 确保所有文字可见 -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="应用设置" Icon="pack://application:,,,/Resources/icc.ico" />

        <Grid Grid.Row="1">
            <ui:NavigationView x:Name="NavView"
                           IsBackButtonVisible="Collapsed"
                           IsPaneToggleVisible="True"
                           PaneDisplayMode="Left"
                           OpenPaneLength="280"
                           CompactPaneLength="56"
                           MenuItemsSource="{Binding NavigationItems}"
                           FooterMenuItemsSource="{Binding NavigationFooter}">

            <ui:NavigationView.PaneHeader>
                <Grid Margin="12,16,12,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8"
                            Background="{DynamicResource SystemAccentColorTertiaryBrush}" Margin="0,0,12,0">
                        <ui:FontIcon Glyph="&#xE713;" FontSize="18"
                                     Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="设置"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="InkCanvasForClass"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:NavigationView.PaneHeader>
            </ui:NavigationView>
        </Grid>

        <ui:ContentDialogHost x:Name="RootContentDialogPresenter" Grid.RowSpan="2" />
    </Grid>
</ui:FluentWindow>
