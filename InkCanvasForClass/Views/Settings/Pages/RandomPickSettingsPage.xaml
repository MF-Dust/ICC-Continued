<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.RandomPickSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600"
             Background="Transparent"
             Foreground="#FAFAFA"
             ui:ThemeManager.RequestedTheme="Dark">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SettingsPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="随机点名" Style="{StaticResource PageTitleStyle}"/>

        <!-- 基础设置 -->
        <TextBlock Text="基础设置" Style="{StaticResource SettingsGroupTitleStyle}"/>

         <!-- 显示名称输入按钮 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE8FA;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="显示名称输入按钮" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="在随机点名窗口显示输入学生姓名的按钮" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding RandomPick.DisplayRandWindowNamesInputBtn, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 窗口关闭延迟 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE916;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="窗口自动关闭延迟" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="点名窗口显示结果后的停留时间 (秒)" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <Slider Grid.Column="2" VerticalAlignment="Center"
                        Minimum="1" Maximum="10"
                        Value="{Binding RandomPick.RandWindowOnceCloseLatency, Mode=TwoWay}"
                        TickFrequency="0.5" IsSnapToTickEnabled="True"
                        SmallChange="0.5" LargeChange="1"/>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="{Binding RandomPick.RandWindowOnceCloseLatency, StringFormat={}{0:F1}s}"
                           Style="{StaticResource SettingsValueStyle}"/>
            </Grid>
        </Border>

        <!-- 单次最大学生数 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE716;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="单次显示最大人数" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="一次随机点名显示的最大学生数量" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:NumberBox Grid.Column="2" VerticalAlignment="Center"
                              Value="{Binding RandomPick.RandWindowOnceMaxStudents, Mode=TwoWay}"
                              Minimum="1" Maximum="100" SpinButtonPlacementMode="Inline"/>
            </Grid>
        </Border>

    </StackPanel>
</UserControl>
