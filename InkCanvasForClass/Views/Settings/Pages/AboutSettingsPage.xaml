<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.AboutSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:local="clr-namespace:Ink_Canvas.Views.Settings.Pages"
             xmlns:vm="clr-namespace:Ink_Canvas.ViewModels.Settings"
             mc:Ignorable="d"
             d:DesignHeight="1200" d:DesignWidth="600"
             Background="Transparent"
             Foreground="#FAFAFA"
             ui:ThemeManager.RequestedTheme="Dark"
             d:DataContext="{d:DesignInstance vm:AboutSettingsViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SettingsPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
        <StackPanel Margin="0,0,12,24">
            <TextBlock Text="关于" Style="{StaticResource PageTitleStyle}"/>
            <TextBlock Text="版本信息与开源许可" Style="{StaticResource PageSubtitleStyle}"/>

            <!-- UI Banner Placeholder -->
            <Border Style="{StaticResource HeroBannerStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E3A8A" Offset="0"/>
                        <GradientStop Color="#1E1B4B" Offset="0.5"/>
                        <GradientStop Color="#312E81" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1E3A8A" Offset="0"/>
                            <GradientStop Color="#1E1B4B" Offset="0.5"/>
                            <GradientStop Color="#312E81" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <!-- Futuristic Grid Pattern Overlay -->
                    <Grid Opacity="0.3">
                        <Grid.Background>
                            <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,20,20"/>
                                        </GeometryDrawing.Geometry>
                                        <GeometryDrawing.Pen>
                                            <Pen Brush="#60A5FA" Thickness="0.5"/>
                                        </GeometryDrawing.Pen>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Background>
                    </Grid>

                    <!-- Content -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ApplicationName}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#F0F9FF"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Version, StringFormat='Version:{0}'}"
                                   FontSize="18"
                                   Foreground="#93C5FD"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding CodeName, StringFormat='Codename:{0}'}"
                                   FontSize="14"
                                   Foreground="#DBEAFE"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"/>
                    </StackPanel>

                    <!-- Glowing Accent Lines -->
                    <Border BorderBrush="#60A5FA"
                            BorderThickness="1"
                            CornerRadius="12"
                            Opacity="0.5"
                            Margin="2"/>
                </Grid>
            </Border>

            <!-- Version Info -->
            <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{Binding Version, StringFormat='Release Version: {0}'}" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding BundleVersion, StringFormat='Bundle Version: {0}'}" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>


            <!-- License Box -->
            <Border Style="{StaticResource SettingsCardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <ui:FontIcon Glyph="&#xE8A9;" FontSize="24" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="{Binding LicenseDescription}" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding LicenseName}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{Binding LicenseDescription}"
                               TextWrapping="Wrap" Foreground="{StaticResource SecondaryTextBrush}" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Acknowledgment -->
            <StackPanel Margin="0,0,0,16">
                <TextBlock Text="致谢：" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock>
                    <Run Text="InkCanvasForClass" FontWeight="Bold"/>
                    <Hyperlink NavigateUri="{Binding OriginalProjectUrl}" Foreground="#60A5FA">
                        {Binding OriginalProjectUrl}
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
