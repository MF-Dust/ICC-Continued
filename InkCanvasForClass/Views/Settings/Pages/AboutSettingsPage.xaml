<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.AboutSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:local="clr-namespace:Ink_Canvas.Views.Settings.Pages"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600"
             Background="Transparent"
             Foreground="#FAFAFA"
             ui:ThemeManager.RequestedTheme="Dark">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- 颜色定义 -->
            <Color x:Key="CardBackgroundColor">#2D2D30</Color>
            <Color x:Key="AccentColor">#60A5FA</Color>
            <Color x:Key="PrimaryTextColor">#FAFAFA</Color>
            <Color x:Key="SecondaryTextColor">#A1A1AA</Color>
            <Color x:Key="BorderColor">#3F3F46</Color>
            <Color x:Key="DividerColor">#27272A</Color>

            <!-- 画刷定义 -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
            <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>

            <!-- 页面标题样式 -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Margin" Value="0,0,0,24"/>
            </Style>

            <!-- 设置卡片容器样式 -->
            <Style x:Key="SettingsCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- 设置项标题样式 -->
            <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 设置项描述样式 -->
            <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <!-- 设置分组标题样式 -->
            <Style x:Key="SettingsGroupTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,20,0,12"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            </Style>

            <!-- 图标样式 -->
            <Style x:Key="SettingsIconStyle" TargetType="ui:FontIcon">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Margin" Value="0,0,16,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 标签样式 -->
            <Style x:Key="SettingsTagStyle" TargetType="Border">
                <Setter Property="Background" Value="#33FFFFFF"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Margin" Value="0,0,8,8"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="关于" Style="{StaticResource PageTitleStyle}"/>

        <!-- 关于 Ink Canvas for Class -->
        <TextBlock Text="应用信息" Style="{StaticResource SettingsGroupTitleStyle}"/>

        <Border Style="{StaticResource SettingsCardStyle}">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border CornerRadius="12" Width="72" Height="72" Margin="0,0,20,0" Background="#2563EB">
                        <Image Source="/InkCanvasForClass;component/icc.png" Width="56" Height="56"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Ink Canvas for Class" FontSize="24" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="专为课堂教学设计的电子白板软件" FontSize="14"
                                   Foreground="{StaticResource SecondaryTextBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <Border Background="{StaticResource DividerBrush}" Height="1" Margin="0,0,0,16"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="版本" Style="{StaticResource SettingsTitleStyle}"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Grid.Column="1" Text="v2.0.0" Style="{StaticResource SettingsTitleStyle}"
                               Foreground="{StaticResource AccentBrush}"/>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="开源协议" Style="{StaticResource SettingsTitleStyle}"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Grid.Column="1" Text="MIT License" Style="{StaticResource SettingsTitleStyle}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="版权所有" Style="{StaticResource SettingsTitleStyle}"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Grid.Column="1" Text="© 2023-2026 Ink Canvas Team" Style="{StaticResource SettingsTitleStyle}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 贡献者 -->
        <TextBlock Text="贡献者" Style="{StaticResource SettingsGroupTitleStyle}"/>

        <Border Style="{StaticResource SettingsCardStyle}">
            <StackPanel>
                <TextBlock Text="感谢所有为此项目做出贡献的开发者" Style="{StaticResource SettingsDescriptionStyle}" Margin="0,0,0,16"/>

                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <!-- 贡献者标签 -->
                    <Border Style="{StaticResource SettingsTagStyle}">
                        <TextBlock Text="SakuraStar" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                    <Border Style="{StaticResource SettingsTagStyle}">
                        <TextBlock Text="iNKORE" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                    <Border Style="{StaticResource SettingsTagStyle}">
                        <TextBlock Text="WXRIW" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                    <Border Style="{StaticResource SettingsTagStyle}">
                        <TextBlock Text="dubi906w" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- 链接 -->
        <TextBlock Text="链接" Style="{StaticResource SettingsGroupTitleStyle}"/>

        <Border Style="{StaticResource SettingsCardStyle}">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Glyph="&#xE774;" Style="{StaticResource SettingsIconStyle}"/>
                    <TextBlock Grid.Column="1" Text="GitHub 仓库" Style="{StaticResource SettingsTitleStyle}"/>
                    <ui:FontIcon Grid.Column="2" Glyph="&#xE8A7;" FontSize="14"
                                 Foreground="{StaticResource SecondaryTextBrush}"/>
                </Grid>
                <Border Background="{StaticResource DividerBrush}" Height="1" Margin="36,4,0,12"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Glyph="&#xE8A4;" Style="{StaticResource SettingsIconStyle}"/>
                    <TextBlock Grid.Column="1" Text="报告问题" Style="{StaticResource SettingsTitleStyle}"/>
                    <ui:FontIcon Grid.Column="2" Glyph="&#xE8A7;" FontSize="14"
                                 Foreground="{StaticResource SecondaryTextBrush}"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
