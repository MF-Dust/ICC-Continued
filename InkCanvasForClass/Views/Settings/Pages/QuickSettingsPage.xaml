<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.QuickSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Ink_Canvas.Views.Settings.Pages"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="800"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <ui:DynamicScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
        <StackPanel Margin="0,0,12,24">
            
            <!-- 页面标题 -->
            <ui:TextBlock Text="快速设置" FontTypography="Title" Margin="0,0,0,8" />
            <ui:TextBlock Text="常用设置项的快速访问入口" FontTypography="Body" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,24" />

            <!-- 启动设置分组 -->
            <ui:TextBlock Text="启动" FontTypography="BodyStrong" Margin="0,0,0,8"/>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Power24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="开机时运行" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="系统启动时自动运行此应用程序" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <ui:ToggleSwitch x:Name="ToggleRunAtStartup" Click="ToggleRunAtStartup_Toggled" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,12">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="PanelRightContract24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="开机运行后收纳到侧边栏" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="启动后自动将工具栏折叠到屏幕边缘" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding Startup.IsFoldAtStartup, Mode=TwoWay}" />
            </ui:CardControl>

            <!-- 工具栏设置分组 -->
            <ui:TextBlock Text="工具栏" FontTypography="BodyStrong" Margin="0,0,0,8"/>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="ArrowMaximize24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="浮动工具栏缩放" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="调整工具栏的显示大小" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider Width="200" VerticalAlignment="Center" Margin="0,0,10,0"
                            Minimum="0.5" Maximum="2.0"
                            Value="{Binding Appearance.ViewboxFloatingBarScaleTransformValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2"/>
                    <TextBlock Text="{Binding Appearance.ViewboxFloatingBarScaleTransformValue, StringFormat={}{0:F1}x}" 
                               VerticalAlignment="Center" Width="40" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,12">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Drop24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="浮动工具栏透明度" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="调整工具栏的不透明度" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider Width="200" VerticalAlignment="Center" Margin="0,0,10,0"
                            Minimum="0.1" Maximum="1.0"
                            Value="{Binding Appearance.ViewboxFloatingBarOpacityValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2"/>
                    <TextBlock Text="{Binding Appearance.ViewboxFloatingBarOpacityValue, StringFormat={}{0:P0}}" 
                               VerticalAlignment="Center" Width="40" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

            <!-- 快速操作分组 -->
            <ui:TextBlock Text="快速操作" FontTypography="BodyStrong" Margin="0,0,0,8"/>

            <ui:InfoBar Title="快捷键提示" 
                        Message="• Ctrl + S：切换收纳模式&#x0a;• Ctrl + F：强制全屏化&#x0a;• Ctrl + T：重置工具栏位置&#x0a;• Ctrl + R：重启应用"
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="False" />
            
            <Border Height="40"/>
        </StackPanel>
    </ui:DynamicScrollViewer>
</UserControl>
