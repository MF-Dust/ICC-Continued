<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.StartupSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Ink_Canvas.Views.Settings.Pages"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600"
             Background="Transparent">

    <ui:DynamicScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
        <StackPanel Margin="0,0,12,24">
            <ui:TextBlock Text="基本" FontTypography="Title" Margin="0,0,0,8" />

            <!-- 启动设置分组 -->
            <ui:TextBlock Text="启动" FontTypography="BodyStrong" Margin="0,0,0,8"/>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Power24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="开机时运行" FontTypography="Body"/>
                        <ui:TextBlock Text="系统启动时自动运行此应用程序" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch x:Name="ToggleRunAtStartup" Click="ToggleRunAtStartup_Toggled"/>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,24">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="PanelRightContract24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="开机运行后收纳到侧边栏" FontTypography="Body"/>
                        <ui:TextBlock Text="启动后自动将工具栏折叠到屏幕边缘" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding Startup.IsFoldAtStartup, Mode=TwoWay}"/>
            </ui:CardControl>

            <!-- 工具栏设置分组 -->
            <ui:TextBlock Text="工具栏" FontTypography="BodyStrong" Margin="0,0,0,8"/>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="ResizeLarge24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="浮动工具栏缩放" FontTypography="Body"/>
                        <ui:TextBlock Text="调整工具栏的显示大小" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider MinWidth="120" Minimum="0.5" Maximum="2.0" Margin="0,0,12,0"
                            Value="{Binding Appearance.ViewboxFloatingBarScaleTransformValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2" VerticalAlignment="Center"/>
                    <ui:TextBlock Text="{Binding Appearance.ViewboxFloatingBarScaleTransformValue, StringFormat={}{0:F1}x}" 
                                  VerticalAlignment="Center" Width="40" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Drop24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="浮动工具栏透明度" FontTypography="Body"/>
                        <ui:TextBlock Text="调整工具栏的不透明度" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider MinWidth="120" Minimum="0.1" Maximum="1.0" Margin="0,0,12,0"
                            Value="{Binding Appearance.ViewboxFloatingBarOpacityValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2" VerticalAlignment="Center"/>
                    <ui:TextBlock Text="{Binding Appearance.ViewboxFloatingBarOpacityValue, StringFormat={}{0:P0}}" 
                                  VerticalAlignment="Center" Width="40" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="SlidePlay24"/>
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock Text="PPT模式下工具栏透明度" FontTypography="Body"/>
                        <ui:TextBlock Text="在演示模式下工具栏的不透明度" FontTypography="Caption" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider MinWidth="120" Minimum="0.1" Maximum="1.0" Margin="0,0,12,0"
                            Value="{Binding Appearance.ViewboxFloatingBarOpacityInPPTValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2" VerticalAlignment="Center"/>
                    <ui:TextBlock Text="{Binding Appearance.ViewboxFloatingBarOpacityInPPTValue, StringFormat={}{0:P0}}" 
                                  VerticalAlignment="Center" Width="40" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>
        </StackPanel>
    </ui:DynamicScrollViewer>
</UserControl>
