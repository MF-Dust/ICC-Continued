<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.AppearanceSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:Ink_Canvas.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="1200" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:AppearanceSettingsViewModel}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <ui:DynamicScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
        <StackPanel Margin="0,0,12,24">
            
            <!-- 页面标题 -->
            <ui:TextBlock Text="外观" FontTypography="Title" Margin="0,0,0,8" />
            <ui:TextBlock Text="自定义应用的外观和显示选项" FontTypography="Body" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,24" />

            <!-- 按钮显示设置 -->
            <ui:TextBlock Text="工具栏按钮" FontTypography="BodyStrong" Margin="0,0,0,8" />
            
            <ui:CardExpander Margin="0,0,0,12" IsExpanded="True">
                <ui:CardExpander.Icon>
                    <ui:SymbolIcon Symbol="Apps24" />
                </ui:CardExpander.Icon>
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="按钮可见性" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="选择在主工具栏上显示的按钮" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardExpander.Header>
                
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 第一行 -->
                    <CheckBox Grid.Row="0" Grid.Column="0" Content="形状" IsChecked="{Binding Appearance.IsShowShapeButton, Mode=TwoWay}" Margin="0,0,8,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" Content="冻结" IsChecked="{Binding Appearance.IsShowFreezeButton, Mode=TwoWay}" Margin="0,0,8,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="2" Content="漫游" IsChecked="{Binding Appearance.IsShowRoamingButton, Mode=TwoWay}" Margin="0,0,8,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="3" Content="撤销" IsChecked="{Binding Appearance.IsShowUndoButton, Mode=TwoWay}" Margin="0,0,8,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="4" Content="重做" IsChecked="{Binding Appearance.IsShowRedoButton, Mode=TwoWay}" Margin="0,0,0,12"/>

                    <!-- 第二行 -->
                    <CheckBox Grid.Row="1" Grid.Column="0" Content="清并鼠" IsChecked="{Binding Appearance.IsShowClearButton, Mode=TwoWay}" Margin="0,0,8,0"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" Content="框选" IsChecked="{Binding Appearance.IsShowSelectButton, Mode=TwoWay}" Margin="0,0,8,0"/>
                    <CheckBox Grid.Row="1" Grid.Column="2" Content="白板" IsChecked="{Binding Appearance.IsShowWhiteboardButton, Mode=TwoWay}" Margin="0,0,8,0"/>
                    <CheckBox Grid.Row="1" Grid.Column="3" Content="隐藏" IsChecked="{Binding Appearance.IsShowHideButton, Mode=TwoWay}" Margin="0,0,8,0"/>
                    <CheckBox Grid.Row="1" Grid.Column="4" Content="手势" IsChecked="{Binding Appearance.IsShowGestureButton, Mode=TwoWay}" Margin="0,0,0,0"/>
                </Grid>
            </ui:CardExpander>

            <ui:CardControl Margin="0,0,0,24">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="EraserTool24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="橡皮擦按钮模式" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="选择橡皮擦按钮的显示方式" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox MinWidth="140" SelectedIndex="{Binding Appearance.EraserButtonsVisibility, Mode=TwoWay}">
                    <ComboBoxItem Content="显示墨迹擦和板擦"/>
                    <ComboBoxItem Content="仅显示墨迹擦"/>
                    <ComboBoxItem Content="仅显示板擦"/>
                </ComboBox>
            </ui:CardControl>

            <!-- 浮动工具栏设置 -->
            <ui:TextBlock Text="浮动工具栏" FontTypography="BodyStrong" Margin="0,0,0,8" />

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="TextDescription24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="显示按钮文字" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="在工具栏按钮旁边显示功能名称" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding Appearance.FloatingBarButtonLabelVisibility, Mode=TwoWay}" />
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Color24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="图标主题" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="选择工具栏的图标风格" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox MinWidth="160" SelectedIndex="{Binding Appearance.FloatingBarImg, Mode=TwoWay}">
                    <ComboBoxItem Content="icc! 默认蓝色"/>
                    <ComboBoxItem Content="icc! 黑色透明版"/>
                </ComboBox>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="ArrowMaximize24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="缩放比例" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="调整浮动工具栏的大小" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider Width="200" VerticalAlignment="Center" Margin="0,0,10,0"
                            Minimum="0.5" Maximum="2.0"
                            Value="{Binding Appearance.ViewboxFloatingBarScaleTransformValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2"/>
                    <TextBlock Text="{Binding Appearance.ViewboxFloatingBarScaleTransformValue, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Center" Width="30" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="Drop24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="常规透明度" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="正常状态下的工具栏透明度" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider Width="200" VerticalAlignment="Center" Margin="0,0,10,0"
                            Minimum="0.1" Maximum="1.0"
                            Value="{Binding Appearance.ViewboxFloatingBarOpacityValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2"/>
                    <TextBlock Text="{Binding Appearance.ViewboxFloatingBarOpacityValue, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Center" Width="30" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,4">
                <ui:CardControl.Icon>
                    <ui:SymbolIcon Symbol="SlidePlay24" />
                </ui:CardControl.Icon>
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Grid.Row="0" Text="PPT 模式透明度" FontTypography="Body" />
                        <ui:TextBlock Grid.Row="1" Text="在 PPT 放映时的工具栏透明度" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontTypography="Caption" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Slider Width="200" VerticalAlignment="Center" Margin="0,0,10,0"
                            Minimum="0.0" Maximum="1.0"
                            Value="{Binding Appearance.ViewboxFloatingBarOpacityInPPTValue, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            SmallChange="0.1" LargeChange="0.2"/>
                    <TextBlock Text="{Binding Appearance.ViewboxFloatingBarOpacityInPPTValue, StringFormat={}{0:F1}}" 
                               VerticalAlignment="Center" Width="30" TextAlignment="Right"/>
                </StackPanel>
            </ui:CardControl>

        </StackPanel>
    </ui:DynamicScrollViewer>
</UserControl>
