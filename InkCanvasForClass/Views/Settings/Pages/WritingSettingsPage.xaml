<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.WritingSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:local="clr-namespace:Ink_Canvas.Views.Settings.Pages"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="600"
             Background="Transparent"
             Foreground="#FAFAFA"
             ui:ThemeManager.RequestedTheme="Dark">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- 颜色定义 -->
            <Color x:Key="CardBackgroundColor">#2D2D30</Color>
            <Color x:Key="AccentColor">#60A5FA</Color>
            <Color x:Key="PrimaryTextColor">#FAFAFA</Color>
            <Color x:Key="SecondaryTextColor">#A1A1AA</Color>
            <Color x:Key="BorderColor">#3F3F46</Color>

            <!-- 画刷定义 -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

            <!-- 页面标题样式 -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Margin" Value="0,0,0,24"/>
            </Style>

            <!-- 设置卡片容器样式 -->
            <Style x:Key="SettingsCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- 设置项标题样式 -->
            <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 设置项描述样式 -->
            <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <!-- 设置分组标题样式 -->
            <Style x:Key="SettingsGroupTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,20,0,12"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            </Style>

            <!-- 图标样式 -->
            <Style x:Key="SettingsIconStyle" TargetType="ui:FontIcon">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Margin" Value="0,0,16,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 值显示样式 -->
            <Style x:Key="SettingsValueStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="书写" Style="{StaticResource PageTitleStyle}"/>

        <!-- 笔迹设置 -->
        <TextBlock Text="笔迹设置" Style="{StaticResource SettingsGroupTitleStyle}"/>

        <!-- 墨迹宽度 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xED63;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="墨迹宽度" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="调整画笔的默认粗细" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <Slider Grid.Column="2" VerticalAlignment="Center"
                        Minimum="1" Maximum="10"
                        Value="{Binding Whiteboard.InkWidth, Mode=TwoWay}"
                        TickFrequency="0.5" IsSnapToTickEnabled="True"
                        SmallChange="0.5" LargeChange="1"/>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="{Binding Whiteboard.InkWidth, StringFormat={}{0:F1}}"
                           Style="{StaticResource SettingsValueStyle}"/>
            </Grid>
        </Border>

        <!-- 荧光笔宽度 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE7E6;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="荧光笔宽度" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="调整荧光笔的默认粗细" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <Slider Grid.Column="2" VerticalAlignment="Center"
                        Minimum="5" Maximum="50"
                        Value="{Binding Whiteboard.HighlighterWidth, Mode=TwoWay}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        SmallChange="1" LargeChange="5"/>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="{Binding Whiteboard.HighlighterWidth, StringFormat={}{0:F0}}"
                           Style="{StaticResource SettingsValueStyle}"/>
            </Grid>
        </Border>

        <!-- 平滑曲线 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE809;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="平滑曲线" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="使笔迹更加平滑自然" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding Whiteboard.FitToCurve, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 墨迹识别设置 -->
        <TextBlock Text="墨迹识别" Style="{StaticResource SettingsGroupTitleStyle}"/>

        <!-- 启用墨迹转形状 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xED5F;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="启用墨迹转形状" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="自动将手绘墨迹转换为标准几何形状" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding InkToShape.IsInkToShapeEnabled, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 识别三角形 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xF158;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="识别三角形" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="将手绘三角形转换为标准三角形" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding InkToShape.IsInkToShapeTriangle, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 识别矩形 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xF156;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="识别矩形" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="将手绘矩形转换为标准矩形" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding InkToShape.IsInkToShapeRectangle, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 识别圆形 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xEA3A;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="识别圆形/椭圆" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="将手绘圆形转换为标准圆形或椭圆" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding InkToShape.IsInkToShapeRounded, Mode=TwoWay}"/>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
