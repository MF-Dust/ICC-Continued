<UserControl x:Class="Ink_Canvas.Views.Settings.Pages.AutomationSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:local="clr-namespace:Ink_Canvas.Views.Settings.Pages"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600"
             Background="Transparent"
             Foreground="#FAFAFA"
             ui:ThemeManager.RequestedTheme="Dark">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- 颜色定义 -->
            <Color x:Key="CardBackgroundColor">#2D2D30</Color>
            <Color x:Key="AccentColor">#60A5FA</Color>
            <Color x:Key="PrimaryTextColor">#FAFAFA</Color>
            <Color x:Key="SecondaryTextColor">#A1A1AA</Color>
            <Color x:Key="BorderColor">#3F3F46</Color>

            <!-- 画刷定义 -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

            <!-- 页面标题样式 -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Margin" Value="0,0,0,24"/>
            </Style>

            <!-- 设置卡片容器样式 -->
            <Style x:Key="SettingsCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- 设置项标题样式 -->
            <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 设置项描述样式 -->
            <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <!-- 设置分组标题样式 -->
            <Style x:Key="SettingsGroupTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,20,0,12"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            </Style>

            <!-- 图标样式 -->
            <Style x:Key="SettingsIconStyle" TargetType="ui:FontIcon">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Margin" Value="0,0,16,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- 值显示样式 -->
            <Style x:Key="SettingsValueStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="自动化" Style="{StaticResource PageTitleStyle}"/>

        <!-- 自动化功能 -->
        <TextBlock Text="自动化功能" Style="{StaticResource SettingsGroupTitleStyle}"/>

        <!-- 自动折叠 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE744;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="自动折叠" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="闲置一段时间后自动折叠工具栏" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding Automation.IsAutoFold, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 自动折叠时间 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE916;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="自动折叠时间" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="闲置多少秒后自动折叠" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <Slider Grid.Column="2" VerticalAlignment="Center"
                        Minimum="5" Maximum="60"
                        Value="{Binding Automation.AutoFoldTime, Mode=TwoWay}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        SmallChange="1" LargeChange="5"/>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="{Binding Automation.AutoFoldTime, StringFormat={}{0:F0}s}"
                           Style="{StaticResource SettingsValueStyle}"/>
            </Grid>
        </Border>

        <!-- 自动保存 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE74E;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="自动保存" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="定期自动保存墨迹" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <ui:ToggleSwitch Grid.Column="2" VerticalAlignment="Center"
                                 IsOn="{Binding Automation.IsAutoSave, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- 自动保存间隔 -->
        <Border Style="{StaticResource SettingsCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:FontIcon Glyph="&#xE916;" Style="{StaticResource SettingsIconStyle}"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="自动保存间隔" Style="{StaticResource SettingsTitleStyle}"/>
                    <TextBlock Text="每隔多少分钟自动保存一次" Style="{StaticResource SettingsDescriptionStyle}"/>
                </StackPanel>
                <Slider Grid.Column="2" VerticalAlignment="Center"
                        Minimum="1" Maximum="60"
                        Value="{Binding Automation.AutoSaveInterval, Mode=TwoWay}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        SmallChange="1" LargeChange="5"/>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="{Binding Automation.AutoSaveInterval, StringFormat={}{0:F0}min}"
                           Style="{StaticResource SettingsValueStyle}"/>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
